{% extends 'base.html.twig' %}

{% block title %}Správa uživatelů{% endblock %}

{% block body %}
    <main class="site-main">
        <div class="container-md py-4">
            <h1>Správa uživatelů</h1>
            <section class="py-3">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Email</th>
                            <th scope="col">Role</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            {% if user.email != app.user.email %}
                                <tr>
                                    <td>{{ user.email }}</td>
                                    <td>
                                        {% for role in user.roles %}
                                            <div>{{ role }}</div>
                                        {% endfor %}
                                    </td>
                                    <td>
                                        <div class="dropdown d-inline">
                                            <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                Změnit oprávnění
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li><a class="dropdown-item" href="{{ path('change_user_role', {userId: user.id, role: 'ROLE_USER'}) }}">Běžný uživatel</a></li>
                                                <li><a class="dropdown-item" href="{{ path('change_user_role', {userId: user.id, role: 'ROLE_ADMIN'}) }}">Admin</a></li>
                                                <li><a class="dropdown-item" href="{{ path('change_user_role', {userId: user.id, role: 'ROLE_SUPER_ADMIN'}) }}">Super admin</a></li>
                                            </ul>
                                        </div>
                                        <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#delete-user">
                                            Smazat
                                        </button>
                                        <!-- Modal -->
                                        <div class="modal fade" id="delete-user" tabindex="-1" aria-labelledby="exampleModalLabel"
                                             aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h1 class="modal-title fs-5" id="exampleModalLabel">Smazat účet
                                                            <i><b>{{ user.email }}</b></i></h1>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                                aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        Opravdu chcete smazat účet? Tato akce je nevratná.
                                                    </div>
                                                    <div class="modal-footer">
                                                        <a class="btn btn-danger" href="{{ path('delete_user', { userId: user.id }) }}">Smazat</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {% endif %}
                        {% endfor %}
                    </tbody>
                </table>
            </section>
        </div>
    </main>
{% endblock %}

