{% extends 'base.html.twig' %}

{% block title %}Přihlášení{% endblock %}

{% block body %}
    <div class="container-md py-4">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            {% if justRegistered %}
                <div>
                    Registrace proběhla úspěšně. Můžete se přihlásit.
                </div>
            {% endif %}

            <div class="mb-3">
                <label for="inputEmail" class="form-label">Email</label>
                <input class="form-control" type="email" value="{{ last_username }}" name="email" id="inputEmail"
                       required autofocus>
            </div>
            <div class="mb-3">
                <label class="form-label" for="inputPassword">Heslo</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
            </div>

            <button class="btn btn-primary mb-3" type="submit">
                Přihlásit se
            </button>
            <div>Jste tu poprvé? <a href="/register">Registrujte se.</a></div>
        </form>
    </div>

{% endblock %}
