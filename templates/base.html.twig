<!doctype html>
<html lang="cs">
<head>
    <meta name="robots" content="noindex">

    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="manifest" href="/manifest/manifest.json">

    <link rel="stylesheet" href="/styles/bootstrap.min.css">
    <link rel="stylesheet" href="/styles/app.css">

    <title>{% block title %}Recepty{% endblock %}</title>

</head>
<body>

<nav class="navbar bg-body-tertiary navbar-expand-md">
    <div class="container-md">
        <a class="navbar-brand" href="/">Recepty</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse flex-grow-0" id="navbarNav">
            <ul class="navbar-nav">
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('edit_users') }}">Uživatelé</a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('edit_tags') }}">Upravit tagy</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('create_new_recipe') }}">Přidat recept</a>
                    </li>
                {% endif %}
                {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">Odhlásit se</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_login') }}">Přihlásit se</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>

{% block body %}{% endblock %}
<script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>
