{% extends 'base.html.twig' %}

{% block body %}

<main class="site-main">
    <div class="container">
        <section class="post-feed">
            {% for recipe in recipes %}
                <a class="post-card" href="{{ recipe.slug }}">
                    <header class="post-card-header">
                        <div class="post-card-image" style="background-image:url({{ recipe.imageUrl }})">

                        </div>
                        <h2 class="post-card-title">{{ recipe.title }}</h2>
                    </header>
                </a>
            {% endfor %}
        </section>
    </div>
</main>

{% endblock %}
