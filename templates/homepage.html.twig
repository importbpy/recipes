{% extends 'base.html.twig' %}

{% block styles %}
    <link rel="stylesheet" href="/styles/login.css" >
{% endblock %}

{% block body %}
<div class="container">
    <div class="menu">
        <a href="/" class="menu-item" >
            Recepty
        </a>
        <a href="/admin" class="menu-item" >
            Admin
        </a>
    </div>
    <div class="tags">
        <a href="{{ url('homepage') ~ '?sort=' ~ sort.az }}" class="tag">AZ</a>
        <a href="{{ url('homepage') ~ '?sort=' ~ sort.date }}" class="tag">date</a>
    </div>
    <div class="tags">
        {% for tag in tags %}
            <a href="{{ url('homepage') ~ '?tags=' ~ tag.name }}" class="tag">{{ tag.name }}</a>
        {% endfor %}
    </div>
    <div class="tags">
        <a href="{{ url('homepage') }}" class="tag">odebrat tagy</a>
    </div>

    <div class="grid">
        {% for recipe in recipes %}
            <a class="recipe" href="{{ '/recept/' ~ recipe.slug }}">
                <div class="aspect">
                    <img src="{{ 'http://' ~ app.request.host ~ '/images/small/' ~ recipe.slug ~ '.jpg' }}" alt="{{ recipe.title }} " class="fill">
                </div>
                <h2 class="recipe-title">{{ recipe.title }}</h2>
            </a>
        {% endfor %}
    </div>
</div>

{% endblock %}
